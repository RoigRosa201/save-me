<% content_for :title, "Create Destination" %>
 <div class="card mx-auto" style="width: 30rem;">
  <div class="card-body">
    <h2 class="card-title"><strong>Create Destination</strong></h2>

      <%= form_with(model: @destin, url: user_destin_index_path(current_user), method: :post) do |f| %>

        <%= f.hidden_field(:user_id, value: current_user.id) %>

        <div class="field">
          <%= f.label :title %><br />
          <%= f.text_field :title %>
        </div><br>
        <div class="field">
          <%= f.label :start_date %>
          <%= f.date_field :start_date %>
        </div>
        <div class="field">
          <%= f.label :end_date %>
          <%= f.date_field :end_date %>
        </div>
        <div class="field">
          <%= f.label :alarm_date %><br />
          <%= f.datetime_field :alarm_date %>
        </div>
        <div class="field">
          <%= f.label :address %><br />
          <%= f.text_area :address %>
        </div>
        <h4>GPS Coordinates</h4>
        <div class="field">
          <%= f.label :latitude %>
          <%= f.text_field :latitude %>
        </div>
        <div class="field">
          <%= f.label :longitude %>
          <%= f.text_field :longitude %>
        </div>
        <br>
        <div class="field">
          <%= f.label :text_to_speech %>
          <%= f.text_area :voice_msg %>
        </div>
        <div class="actions">
          <%= f.submit "Create Destination", {class: "btn btn-warning"} %>
        </div>
        <%= link_to "Back", :back, {class: "back-link"} %>
      <% end %>
    </div>
  </div>